<%- include('header') %>
<script src="/login.js"></script>
<div class="container">
    <div class="authentication-screen">
        <nav class="nav nav-pills" role="tablist">
            <a href="#" role="tab" aria-selected="true" class="nav-item nav-link active">Login</a>
            <a href="/register" role="tab" data-rb-event-key="registration" tabindex="-1" aria-selected="false" class="nav-item nav-link">Registration</a>
        </nav>
        <div class="tab-content">
            <div role="tabpanel" aria-hidden="false" class="fade tab-pane active show">
                <form class="auth-form">
                    <div class="form-group">
                        <input id="username" name="username" placeholder="Enter username" type="text" id="loginUsername" class="form-control">
                    </div>
                    <div class="form-group">
                        <input id="password" name="password" placeholder="Password" type="password" id="loginPassword" class="form-control">
                    </div>
                    <button id="submit" type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>