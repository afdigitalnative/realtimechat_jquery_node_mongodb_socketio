<%- include('header') %>
<script src="register.js"></script>
<div class="container">
    <div class="authentication-screen">
        <nav class="nav nav-pills" role="tablist">
            <a href="/login" role="tab" aria-selected="true" class="nav-item nav-link">Login</a>
            <a href="#" role="tab" tabindex="-1" aria-selected="false" class="nav-item nav-link active">Registration</a>
        </nav>
        <div role="tabpanel" aria-hidden="true" class="tab-pane">
            <form class="auth-form">
                <div class="form-group">
                    <input id="username" class="form-control" placeholder="Enter username" type="text" value="">
                    <div id="username-available" role="alert" class="username-availability-warning alert alert-danger" style="display:none;"><strong></strong> is already taken, try another username.</div>
                </div>
                <div class="form-group">
                    <input id="password" name="password" placeholder="Password" type="password" id="formPassword" class="form-control">
                </div>
                <button id="submit" type="submit" class="btn btn-primary">Registration</button>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>